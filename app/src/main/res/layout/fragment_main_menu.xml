<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/title_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎体验多模态AI助手"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="#222" />

    <LinearLayout
        android:id="@+id/menu_text_chat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/menu_item_bg"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_text_chat"
            android:layout_marginEnd="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文字聊天"
            android:textSize="20sp"
            android:textColor="#1976D2"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_voice_chat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/menu_item_bg"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_voice_chat"
            android:layout_marginEnd="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音聊天"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_video_chat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/menu_item_bg"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_video_chat"
            android:layout_marginEnd="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频聊天"
            android:textSize="20sp"
            android:textColor="#D2691E"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
