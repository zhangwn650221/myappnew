<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ui.record.RecordFragment">

    <TextView
        android:id="@+id/text_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Emotions &amp; Get AI Advice"
        android:textSize="20sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/button_capture_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image &amp; Get Advice"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/button_record_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record Voice &amp; Get Advice"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android.contentDescription="Preview of captured image"
        android:visibility="gone"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/text_ai_suggestion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI Generated Suggestion:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/text_analysis_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestions will appear here."
            android:gravity="top" />
    </ScrollView>
</LinearLayout>
